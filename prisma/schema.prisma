generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Diary {
  id          Int     @id @default(autoincrement())
  title String
  description String

  npcs Non[]
  enemies Enemy[]
  bosses Boss[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("diaries")
}

model Non {
  id          Int     @id @default(autoincrement())
  name String
  description String
  imgUrl String

  diaryId Int
  diary Diary @relation(fields: [diaryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("npcs")
}

model Enemy {
  id          Int     @id @default(autoincrement())
  title String
  description String
  location String
  imgUrl String

  diaryId Int
  diary Diary @relation(fields: [diaryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("enemies")
}

model Boss {
  id          Int     @id @default(autoincrement())
  title String
  description String
  location String
  imgUrl String

  diaryId Int
  diary Diary @relation(fields: [diaryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bosses")
}